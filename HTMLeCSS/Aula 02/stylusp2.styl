//Mixins
bootle(w=64%, cl1=0, cl2=0)
  width w
  margin cl1 auto cl2

  @media screen and (max-width: 1024px)
    width: 90%
  @media screen and (max-width: 800px)
    width: 95%
  @media screen and (max-width: 400px)
    width 100%

*
  padding 0
  margin 0
  border 0
  list-style none
  text-decoration none
  font-family Helvetica, sans-serif
  
hr
  display none
  
.header
  display flex
  align-items center
  background-color red
  height 100px
  padding 20px
  color #fff
  
  &__bootle
    bootle()
  &__nav
    display flex 
    flex-direction row
    justify-content space-between
  
  &__relevant1
    font-size 1 rem
  
.content
  height 400px
  background-color green
  padding 20px
  display flex
  flex-direction row
  justify-content space-between
  align-items flex-start
  @media screen and (max-width: 400px )
     flex-wrap wrap
  
  &__sidebar
   background-color #999
   width 30%
   flex-grow 1
   height 100% 
   @media screen and (max-width: 400px )
     width 100%
     height 50%
     // order 1 // aparece depois do principal

  &__main
   background-color blue
   flex-grow 1 //Modifica o tamanho do content caso haja modificação na tela
   width 70%
   height 100%
   @media screen and (max-width: 400px )
     width 100%
     height 50%
     
.footer
  padding 20px
  height 200px
  background-color yellow